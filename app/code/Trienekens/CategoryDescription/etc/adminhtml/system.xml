<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <!-- Add new Tab -->
        <tab id="trienekens" translate="label" sortOrder="300">
            <label> <![CDATA[Trienekens online]]></label>
        </tab>
        <section id="trienekens_categorydescription" translate="label" type="text" sortOrder="900" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Long Category Description</label>
            <tab>trienekens</tab>
            <!-- resource tag name which we have to defined in the acl.xml -->
            <resource>Trienekens_CategoryDescription::config_section</resource>
            <group id="general" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>General Config</label>
                <field id="enable" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment><![CDATA[Choose 'yes' to enable module.<br>Version 1.0.0]]></comment>
                </field>
            </group>
        </section>
    </system>
</config>